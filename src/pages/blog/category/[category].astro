---
// src/pages/blog/category/[category].astro
export const prerender = true; 

import { getCollection } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import PostCard from '../../../components/PostCard.astro';
import { getTursoPosts } from '../../../lib/turso';

/**
 * 1. GENERATE STATIC PATHS
 */
export async function getStaticPaths() {
    const localPosts = await getCollection('blog');
    
    let tursoPosts: any[] = [];
    try {
        tursoPosts = await getTursoPosts() as any[];
    } catch (e) {
        console.error("Gagal ambil Turso saat build paths:", e);
    }

    const allCategories = [...new Set([
        ...localPosts.map(p => p.data.category), 
        ...tursoPosts.map(p => p.category)
    ].filter(Boolean))];

    return allCategories.map(cat => ({
        params: { category: cat },
        props: { category: cat }
    }));
}

const { category } = Astro.params;

/**
 * 2. AMBIL DATA UNTUK HALAMAN INI
 */
const allLocal = await getCollection('blog');
let allTurso: any[] = [];
try {
    allTurso = await getTursoPosts() as any[];
} catch (e) {
    allTurso = [];
}

/**
 * 3. GENERATE TABS KATEGORI
 */
const allCategoriesForTabs = ['all', ...new Set([
    ...allLocal.map(p => p.data.category), 
    ...allTurso.map(p => p.category)
].filter(Boolean))];

/**
 * 4. FILTERING & MAPPING
 */
const filteredLocal = allLocal
    .filter((post) => post.data.category === category)
    .map(post => ({
        ...post.data,
        // FIX: Hapus ekstensi .md agar link tidak 404
        slug: (post.id || post.slug).replace(/\.(md|mdx)$/, ''),
        isExternal: false
    }));

const filteredTurso = allTurso
    .filter((post) => post.category === category)
    .map((post: any) => ({
        ...post,
        isExternal: true,
        // FIX: Pastikan pubDate dan Image terpetakan dengan benar
        pubDate: post.published_at || post.created_at || post.pubDate,
        image: post.r2_image_url || post.image
    }));

// 5. GABUNG DAN URUTKAN
const allPosts = [...filteredLocal, ...filteredTurso].sort((a: any, b: any) => 
    new Date(b.pubDate || 0).getTime() - new Date(a.pubDate || 0).getTime()
);

const categoryName = category ? String(category).replace('-', ' ') : 'Category';
---

<BaseLayout title={`${categoryName} - Zaidly Blog`}>
  <main class="bg-cream-latte/30 min-h-screen pt-32 pb-20">
    <div class="container mx-auto max-w-6xl px-4">
      
      {/* TABS KATEGORI */}
      <nav class="flex flex-wrap justify-center gap-3 mb-16 border-b border-coffee-brown/10 pb-12" aria-label="Blog categories">
        {allCategoriesForTabs.map((cat) => (
            <a 
                href={cat === 'all' ? '/blog' : `/blog/category/${cat}`}
                class:list={[
                    "text-[10px] font-black uppercase tracking-[0.2em] px-6 py-3 border transition-all duration-300 bg-white shadow-sm hover:shadow-md",
                    cat === category ? "border-coffee-dark text-coffee-dark bg-slate-50" : "border-coffee-dark/10 text-coffee-brown hover:border-accent-primary hover:text-accent-primary"
                ]}
            >
                {String(cat).replace('-', ' ')}
            </a>
        ))}
      </nav>

      {/* HEADER KATEGORI */}
      <header class="mb-12 border-b-2 border-coffee-dark pb-6">
        <h1 class="text-5xl font-black uppercase italic text-coffee-dark">
          {categoryName}
        </h1>
        <p class="text-coffee-brown mt-2 text-sm uppercase tracking-widest font-bold">
          {allPosts.length} Articles Found
        </p>
      </header>

      {/* GRID ARTIKEL */}
      {allPosts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
          {allPosts.map(post => (
            <PostCard post={post} />
          ))}
        </div>
      ) : (
        <div class="text-center py-20 bg-white/50 border-2 border-dashed border-coffee-brown/20 rounded-[2rem]">
          <p class="text-coffee-brown italic">New articles for this category are being brewed. Check back soon!</p>
        </div>
      )}
    </div>
  </main>
</BaseLayout>