---
// src/pages/blog/[...page].astro
import { getCollection } from "astro:content";
import BaseLayout from '../../layouts/BaseLayout.astro';
import PostCard from '../../components/PostCard.astro';
import HeroBlog from '../../components/HeroBlog.astro';
import type { GetStaticPaths, Page } from 'astro';
import type { CollectionEntry } from 'astro:content';

type CombinedPost = CollectionEntry<'blog'>;

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
    const blogPosts = await getCollection("blog");
    
    // 1. FILTER: Hanya tampilkan yang BUKAN draft & jam tayangnya sudah lewat/saat ini
    const filteredPosts = blogPosts.filter((post) => {
        const isNotDraft = !post.data.draft;
        const isPastPublishDate = post.data.pubDate <= new Date();
        return isNotDraft && isPastPublishDate;
    });

    // 2. SORT: Urutkan berdasarkan tanggal terbaru di atas
    const allPosts = filteredPosts.sort((a, b) => 
        (b.data.pubDate?.getTime() ?? 0) - (a.data.pubDate?.getTime() ?? 0)
    );

    return paginate(allPosts, { pageSize: 9 });
};

const { page } = Astro.props as { page: Page<CombinedPost> }; 

// Filter kategori hanya dari post yang sudah dipublikasikan (Bukan Draft & Sudah Waktunya)
const allPostsForFilter = await getCollection("blog");
const publishedPosts = allPostsForFilter.filter(p => !p.data.draft && p.data.pubDate <= new Date());
const categories = ['all', ...new Set(publishedPosts.map((post) => post.data.category).filter(Boolean))];

const pageNum = page.currentPage;
const posts = page.data;
---

<BaseLayout title={pageNum === 1 ? 'Blog' : `Blog - Page ${pageNum}`}> 
    
    {pageNum === 1 && <HeroBlog />}

    <main class="bg-cream-latte/30 min-h-screen">
        <div class="container mx-auto max-w-6xl px-4 sm:px-6 lg:px-8 py-12">
            
            {/* 1. KATEGORI FILTER */}
            <nav class="flex flex-wrap justify-center gap-3 mb-16 border-b border-coffee-brown/10 pb-12" aria-label="Blog categories">
                {categories.map((cat) => (
                    <a 
                        href={cat === 'all' ? '/blog' : `/blog/category/${cat}`}
                        class:list={[
                            "text-[10px] font-black uppercase tracking-[0.2em] px-6 py-3 border transition-all duration-300 bg-white shadow-sm hover:shadow-md",
                            cat === 'all' ? "border-coffee-dark text-coffee-dark" : "border-coffee-dark/10 text-coffee-brown hover:border-accent-primary hover:text-accent-primary"
                        ]}
                    >
                        {cat.replace('-', ' ')}
                    </a>
                ))}
            </nav>

            {/* 2. GRID ARTIKEL */}
            <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-16">
                {posts.length > 0 ? (
                    posts.map((post) => (
                        <PostCard post={post} /> 
                    ))
                ) : (
                    <div class="col-span-full text-center py-20">
                        <p class="text-coffee-brown italic">No posts found yet. Stay tuned!</p>
                    </div>
                )}
            </section>

            {/* 3. PAGINATION */}
            <div class="mt-24 border-t border-coffee-brown/10 pt-16 flex flex-col items-center">
                {page.url.next ? (
                    <a
                        href={page.url.next}
                        class="group flex flex-col items-center gap-4"
                    >
                        <span class="text-[11px] font-black uppercase tracking-[0.4em] text-coffee-brown group-hover:text-accent-primary transition-colors">
                            Next Page
                        </span>
                        <div class="w-12 h-[1px] bg-coffee-dark group-hover:w-24 group-hover:bg-accent-primary transition-all duration-500"></div>
                    </a>
                ) : (
                    <span class="text-[10px] font-bold uppercase tracking-[0.2em] text-coffee-brown/40 italic">
                        End of Blog
                    </span>
                )}
            </div>
        </div>
    </main>
</BaseLayout>