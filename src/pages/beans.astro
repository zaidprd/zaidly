---
// src/pages/beans.astro (FINAL & PREMIUM VERSION)

import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro'; 
import BeanHubSection from '../components/beans/BeanHub.astro'; 

const pageTitle = "Coffee Bean Mastery & Brewing Guides - Zaidly";

const heroData = {
    title: "From Seed to Sip: The Coffee Journey",
    subtitle: "Explore the profound world of coffee beans, roast profiles, and the artisanal techniques of manual brewing.",
    image: "/images/HowtoStoreBeans.webp", // Gambar khusus untuk halaman Beans
    imageAlt: "High-quality roasted coffee beans in a wooden scoop",
    // linkText & linkUrl dikosongkan agar tombol hilang sesuai desain minimalis kita
};
---

<BaseLayout title={pageTitle}>
    
    <Hero {...heroData} />
    
    <main class="bg-cream-latte pt-24 pb-20">
        <BeanHubSection /> 
    </main>

</BaseLayout>