---
// src/components/guides/GuideSection.astro

// Definisikan interface yang kompatibel dengan data minimal yang dikirim dari pages/guides.astro
interface GuidePost {
  slug: string;
  collection: string; 
  data: {
      title: string;
      image?: string;
      // Menambahkan description opsional untuk fleksibilitas di masa depan
      description?: string; 
  };
}

interface Props {
  posts: GuidePost[];
}

const { posts } = Astro.props;

// Daftar link statis untuk Bean Guides
const staticFeaturedLinks = [
  { title: "Best Coffee Beans", url: "#", image: "/images/who-we-are.jpg" },
  { title: "Single Origin vs Blends", url: "#", image: "/images/who-we-are.jpg" },
  { title: "Light vs Dark Roast", url: "#", image: "/images/who-we-are.jpg" },
  { title: "How to Store Beans", url: "#", image: "/images/who-we-are.jpg" },
];
---

<section id="guides-grid" class="pt-2 pb-16 bg-white">
  <div class="container mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">

    {/* BLOK DESKRIPSI & LINK STATIS */}
    <div class="max-w-7xl mx-auto mb-6">
      <div class="bg-white p-8 rounded-xl border border-transparent shadow-none drop-shadow-none">

        <h2 class="text-4xl font-extrabold text-coffee-dark mb-4">
          Coffee Bean Guides
        </h2>

        <p class="text-lg text-gray-700 mb-8">
          The journey to the perfect cup starts with the bean. We break down the world of coffee beans, from different origins and roasts to buying tips and storage hacks.
        </p>

        <p class="font-bold text-coffee-dark mb-3 text-lg">In our coffee bean hub, youâ€™ll learn about:</p>

        <ul class="list-disc list-inside text-gray-700 space-y-2 ml-4 mb-10">
          <li><strong>Origins:</strong> Unique flavor profiles from Africa, the Americas, and Asia.</li>
          <li><strong>Roasting Levels:</strong> Differences between light, medium, and dark roasts.</li>
          <li><strong>Buying Tips:</strong> Certifications, freshness, and spotting quality beans.</li>
          <li><strong>Storage:</strong> How to store beans to keep them fresh.</li>
          <li><strong>Preparation:</strong> Grinding methods for optimal extraction.</li>
        </ul>

        <h3 class="text-2xl font-bold text-coffee-dark mt-8 mb-6">
          Explore these essential bean guides:
        </h3>

        {/* --- GRID LINK STATIS (4 KOLOM) --- */}
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          {staticFeaturedLinks.map((link) => (
            <a
              href={link.url}
              class="block bg-white rounded-lg overflow-hidden transition duration-300 transform hover:-translate-y-1"
              aria-label={link.title}
            >
              <img
                src={link.image}
                alt={link.title}
                class="w-full h-32 object-cover"
                style={{ aspectRatio: '4/3' }}
              />
              <div class="p-3 text-center">
                <p class="text-sm font-bold text-coffee-dark hover:text-accent-primary transition duration-300">
                  {link.title}
                </p>
              </div>
            </a>
          ))}
        </div>
      </div>
    </div>

    {/* --- DAFTAR POST DINAMIS (POSTS GRID) --- */}
    {/* Catatan: Blok ini hanya akan me-render jika array 'posts' tidak kosong */}
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
      {posts.map((post) => (
        <a 
          href={`/${post.collection}/${post.slug}/`} 
          class="block group relative bg-white rounded-lg overflow-hidden transition duration-300 transform hover:-translate-y-1 shadow-lg hover:shadow-xl"
        >

          <img
            src={post.data.image || '/images/default-post.jpg'}
            alt={post.data.title}
            class="w-full h-56 object-cover"
            style={{ aspectRatio: '4/3' }}
          />

          <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/30 to-transparent p-4 flex flex-col justify-end">
            <h3 class="text-lg font-bold text-white group-hover:text-accent-primary transition duration-300">
              {post.data.title}
            </h3>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>