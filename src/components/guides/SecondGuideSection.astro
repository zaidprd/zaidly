---
// src/components/gear/AccessoriesSection.astro

// Definisikan interface yang kompatibel dengan data minimal yang dikirim dari pages/guides.astro
interface MinimalPost {
    slug: string;
    collection: string; 
    data: {
        title: string;
        image?: string;
        description?: string; 
    };
}

// Interface Props: posts DIBUAT OPSIONAL (posts?)
interface Props {
    posts?: MinimalPost[]; 
}

// Tambahkan nilai default array kosong untuk posts
const { posts = [] } = Astro.props as Props;

// Daftar link statis untuk Accessories
const staticFeaturedLinks = [
    { title: "Best Scales", url: "#", image: "/images/article-3.jpg" }, // Ganti path gambar
    { title: "Gooseneck Kettles", url: "#", image: "images/article-3.jpg" },
    { title: "Filter Paper Comparison", url: "#", image: "/images/article-3.jpg" },
    { title: "Coffee Storage", url: "#", image: "/images/article-3.jpg" },
];

// --- DATA STATIS KATEGORI INI DITANAM DI SINI ---
const sectionId = "accessories-and-tools";
const sectionTitle = "Accessories and Tools";
const sectionSubtitle = "Detail kecil yang membuat perbedaan besar. Temukan timbangan, teko leher angsa, filter, dan alat bantu lainnya.";
const learningPoints = [
    "<strong>Scales:</strong> Mengapa akurasi penting dalam rasio kopi.",
    "<strong>Kettles:</strong> Kontrol suhu dan aliran air untuk pouring yang sempurna.",
    "<strong>Filters:</strong> Perbedaan antara kertas, kain, dan filter metal.",
    "<strong>Storage:</strong> Cara menjaga biji dan peralatan Anda tetap prima.",
    "<strong>Maintenance:</strong> Tips membersihkan peralatan Anda.",
];
---

<section id={sectionId} class="pt-2 pb-16 bg-white">
    <div class="container mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">

        {/* BLOK DESKRIPSI & LINK STATIS */}
        <div class="max-w-7xl mx-auto mb-6">
            <div class="bg-white p-8 rounded-xl border border-transparent shadow-none drop-shadow-none">

                <h2 class="text-4xl font-extrabold text-coffee-dark mb-4">
                    {sectionTitle}
                </h2>

                <p class="text-lg text-gray-700 mb-8">
                    {sectionSubtitle}
                </p>

                <p class="font-bold text-coffee-dark mb-3 text-lg">In this hub, youâ€™ll learn about:</p>

                <ul class="list-disc list-inside text-gray-700 space-y-2 ml-4 mb-10">
                    {learningPoints.map((point) => (
                        <li set:html={point} />
                    ))}
                </ul>

                <h3 class="text-2xl font-bold text-coffee-dark mt-8 mb-6">
                    Explore these essential guides:
                </h3>

                {/* --- GRID LINK STATIS (4 KOLOM) --- */}
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                    {staticFeaturedLinks.map((link) => (
                        <a
                            href={link.url}
                            class="block bg-white rounded-lg overflow-hidden transition duration-300 transform hover:-translate-y-1"
                            aria-label={link.title}
                        >
                            <img
                                src={link.image}
                                alt={link.title}
                                class="w-full h-32 object-cover"
                                style={{ aspectRatio: '4/3' }}
                            />
                            <div class="p-3 text-center">
                                <p class="text-sm font-bold text-coffee-dark hover:text-accent-primary transition duration-300">
                                    {link.title}
                                </p>
                            </div>
                        </a>
                    ))}
                </div>
            </div>
        </div>

        {/* --- DAFTAR POST DINAMIS (POSTS GRID) --- */}
        {/* Blok ini menggunakan posts yang sekarang dijamin menjadi array, meskipun kosong */}
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
            {posts.map((post) => (
                <a 
                    href={`/${post.collection}/${post.slug}/`} 
                    class="block group relative bg-white rounded-lg overflow-hidden transition duration-300 transform hover:-translate-y-1 shadow-lg hover:shadow-xl"
                >
                    <img
                        src={post.data.image || '/images/default-post.jpg'}
                        alt={post.data.title}
                        class="w-full h-56 object-cover"
                        style={{ aspectRatio: '4/3' }}
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/30 to-transparent p-4 flex flex-col justify-end">
                        <h3 class="text-lg font-bold text-white group-hover:text-accent-primary transition duration-300">
                            {post.data.title}
                        </h3>
                    </div>
                </a>
            ))}
        </div>
    </div>
</section>