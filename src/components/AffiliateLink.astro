---

const { url, label = "Amazon" } = Astro.props;

const bgColor = label.toLowerCase() === 'aliexpress' ? 'bg-[#FF4747]' : 'bg-[#D17842]';
---

<div class="my-6 flex justify-center">
  <a 
    href={url} 
    target="_blank" 
    rel="nofollow sponsored" 
    class={`inline-flex items-center justify-center gap-2 px-6 py-3 rounded-xl font-bold !text-white no-underline transition-all hover:scale-105 active:scale-95 shadow-md ${bgColor}`}
  >
    <span class="!text-white">Check Price on {label}</span>
    <svg class="text-white shrink-0" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
      <polyline points="15 3 21 3 21 9"></polyline>
      <line x1="10" y1="14" x2="21" y2="3"></line>
    </svg>
  </a>
</div>
