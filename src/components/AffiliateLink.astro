---
// src/components/AffiliateLink.astro
const { href, merchant = "Amazon" } = Astro.props;

const bgColor = merchant.toLowerCase() === 'aliexpress' ? 'bg-[#FF4747]' : 'bg-[#D17842]';
---

<a 
  href={href} 
  target="_blank" 
  rel="nofollow sponsored" 
  class={`inline-flex items-center justify-center gap-2 px-3 py-2 rounded-md font-bold !text-white no-underline transition-all hover:scale-105 active:scale-95 shadow-sm text-xs sm:text-sm ${bgColor}`}
>
  <span class="!text-white whitespace-nowrap">Price on {merchant}</span>
  <svg class="text-white shrink-0" xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
    <polyline points="15 3 21 3 21 9"></polyline>
    <line x1="10" y1="14" x2="21" y2="3"></line>
  </svg>
</a>