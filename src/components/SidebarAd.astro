---
import { Image } from 'astro:assets';
import adGrinderImg from '../assets/images/BrewConicalBurr.webp';
import adBeansImg from '../assets/images/image.webp';

const ads = [
  {
    label: "Top Pick",
    title: "The Best Grinder",
    productName: "Brew Conical Burr",
    description: "Consistently good grind for perfect daily brewing.",
    img: adGrinderImg,
    link: "https://amzn.to/3YEvz65",
    btnText: "Check on Amazon"
  },
  {
    label: "Our Choice",
    title: "Premium Beans",
    productName: "Lavazza Super Crema",
    description: "Rich, velvety, and perfect for your morning espresso.",
    img: adBeansImg,
    link: "https://amzn.to/44Z5ClA",
    btnText: "Check on Amazon"
  }
];
---

<div class="flex flex-col gap-10 w-full">
  {ads.map((ad) => (
    <div class="relative bg-white border-2 border-coffee-brown/20 p-5 pt-8 flex flex-col items-center transition-all hover:border-coffee-brown/40">
      
      <div class="absolute -top-1 -left-1 bg-coffee-dark text-white px-3 py-1 font-black text-[10px] uppercase tracking-widest shadow-sm">
        {ad.label}
        <div class="absolute top-full left-0 w-0 h-0 border-t-[4px] border-t-black border-l-[4px] border-l-transparent"></div>
      </div>

      <div class="w-full aspect-square bg-[#FDFCF0]/50 rounded-lg mb-4 p-4">
        <Image 
          src={ad.img} 
          alt={ad.productName} 
          class="w-full h-full object-contain"
        />
      </div>

      <div class="w-full text-left">
        <h3 class="text-[11px] font-black text-gray-400 uppercase tracking-tighter mb-1">
          {ad.title}
        </h3>
        
        <h4 class="text-lg font-serif font-bold text-coffee-dark leading-tight mb-2">
          {ad.productName}
        </h4>

        <p class="text-gray-600 text-xs leading-relaxed mb-5 line-clamp-3">
          {ad.description}
        </p>

        <a 
          href={ad.link} 
          target="_blank" 
          class="block w-full bg-[#1a1a1a] text-white text-center py-3 rounded-md font-bold text-xs uppercase tracking-widest hover:bg-coffee-dark transition-all active:scale-95"
        >
          {ad.btnText}
        </a>
      </div>
    </div>
  ))}
</div>