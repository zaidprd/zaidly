---
// src/components/section/LatestArticles.astro
import { Image } from "astro:assets";

const { posts } = Astro.props;
---
<section class="pt-32 pb-20 bg-cream-latte"> 
    <div class="container mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl md:text-4xl font-black text-center text-coffee-dark mb-16 uppercase tracking-tighter font-serif">
            Latest Articles
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
            {posts && posts.map((post: any) => {
                const title = post.title || "Untitled";
                const category = post.category || "Coffee";
                const description = post.description || "";
                const imageSrc = post.image;
                const articleUrl = `/${post.slug}`;

                return (
                    <article class="bg-white rounded-2xl overflow-hidden border border-coffee-brown/10 hover:shadow-2xl hover:shadow-accent-primary/5 transition-all duration-500 flex flex-col h-full group">
                        
                        {/* WRAPPER GAMBAR */}
                        <a href={articleUrl} class="w-full h-60 overflow-hidden bg-coffee-brown/5 relative block">
                            {imageSrc ? (
                                typeof imageSrc === 'string' ? (
                                    <img 
                                        src={imageSrc} 
                                        alt={title} 
                                        class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                                        loading="lazy"
                                    />
                                ) : (
                                    <Image 
                                        src={imageSrc} 
                                        alt={title} 
                                        width={600} 
                                        height={400} 
                                        class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                                    />
                                )
                            ) : (
                                <div class="w-full h-full flex items-center justify-center text-coffee-brown/20 italic text-xs uppercase font-black">
                                    No Image
                                </div>
                            )}
                            
                            {/* BADGE KATEGORI - Lebih Minimalis */}
                            <div class="absolute top-4 left-4 z-10">
                                <span class="bg-white text-coffee-dark text-[9px] font-black uppercase tracking-[0.2em] px-3 py-1.5 rounded-md shadow-sm border border-coffee-brown/5">
                                    {category.replace('-', ' ')}
                                </span>
                            </div>
                        </a>

                        {/* ISI KONTEN */}
                        <div class="p-7 flex flex-col flex-grow">
                            <h3 class="text-xl font-bold text-coffee-dark mb-3 line-clamp-2 leading-tight group-hover:text-accent-primary transition-colors font-serif italic">
                                <a href={articleUrl}>
                                    {title}
                                </a>
                            </h3>
                            
                            <p class="text-[13px] text-coffee-brown/80 line-clamp-3 mb-6 leading-relaxed font-medium"> 
                                {description}
                            </p>
                            
                            <div class="mt-auto pt-6 border-t border-coffee-brown/5">
                                <a href={articleUrl} class="text-[10px] font-black uppercase tracking-[0.2em] text-accent-primary flex items-center gap-2 group/link">
                                    Read Full Story 
                                    <span class="transition-transform duration-300 group-hover/link:translate-x-1">â†’</span>
                                </a>
                            </div>
                        </div>
                    </article>
                );
            })}
        </div>
        
        <div class="text-center mt-20">
            <a href="/blog" class="inline-block bg-coffee-dark text-white text-[11px] font-black uppercase tracking-[0.3em] px-12 py-4 rounded-full hover:bg-accent-primary hover:shadow-2xl hover:shadow-accent-primary/20 transition-all duration-300 transform hover:-translate-y-1">
                Explore All Guides
            </a>
        </div>
    </div>
</section>