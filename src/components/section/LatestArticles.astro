---
// src/components/section/LatestArticles.astro
import { Image } from "astro:assets";

const { posts } = Astro.props;
---
<section class="pt-32 pb-20 bg-cream-latte"> 
    <div class="container mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-center text-coffee-dark mb-10">
            Latest Articles
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {posts && posts.map((post: any) => {
                // 1. IDENTIFIKASI SUMBER DATA
                const isExternal = !!post.isExternal;
                
                // 2. AMBIL DATA DENGAN FALLBACK (Local pakai .data, Turso langsung)
                const title = isExternal ? post.title : (post.data?.title || "Untitled");
                const slug = isExternal ? post.slug : (post.slug || post.id);
                const category = isExternal ? (post.category || "Coffee") : (post.data?.category || "Coffee");
                const description = isExternal ? post.description : (post.data?.description || "");
                const imageSrc = isExternal ? post.image : post.data?.image;

                // 3. GENERATE URL (Pastikan sesuai dengan routing [...slug].astro)
                const articleUrl = `/${slug}`;

                return (
                    <article class="bg-white rounded-[1.5rem] overflow-hidden shadow-sm border border-slate-100 hover:shadow-xl hover:shadow-accent-primary/10 transition duration-500 flex flex-col h-full group">
                        
                        {/* WRAPPER GAMBAR */}
                        <div class="w-full h-56 overflow-hidden bg-slate-50 relative">
                            {imageSrc ? (
                                isExternal ? (
                                    <img 
                                        src={imageSrc} 
                                        alt={title} 
                                        class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                                        loading="lazy"
                                    />
                                ) : (
                                    <Image 
                                        src={imageSrc} 
                                        alt={title} 
                                        width={600} 
                                        height={337} 
                                        class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                                    />
                                )
                            ) : (
                                <div class="w-full h-full bg-slate-100 flex items-center justify-center text-slate-300 italic text-xs">
                                    No Image Available
                                </div>
                            )}
                            
                            {/* BADGE KATEGORI DI ATAS GAMBAR */}
                            <div class="absolute top-4 left-4">
                                <span class="bg-white/90 backdrop-blur-sm text-coffee-dark text-[10px] font-black uppercase tracking-widest px-3 py-1.5 rounded-full shadow-sm">
                                    {category.replace('-', ' ')}
                                </span>
                            </div>
                        </div>

                        {/* ISI KONTEN */}
                        <div class="p-8 flex flex-col flex-grow">
                            <h3 class="text-xl font-bold text-coffee-dark mb-3 line-clamp-2 leading-tight group-hover:text-accent-primary transition-colors">
                                <a href={articleUrl}>
                                    {title}
                                </a>
                            </h3>
                            
                            <p class="text-sm text-coffee-brown/80 line-clamp-3 mb-6 leading-relaxed"> 
                                {description}
                            </p>
                            
                            <div class="mt-auto pt-6 border-t border-slate-50">
                                <a href={articleUrl} class="text-[10px] font-black uppercase tracking-[0.2em] text-accent-primary flex items-center gap-2 group/link">
                                    Read Article 
                                    <span class="transition-transform duration-300 group-hover/link:translate-x-1">â†’</span>
                                </a>
                            </div>
                        </div>
                    </article>
                );
            })}
        </div>
        
        {/* BUTTON VIEW ALL */}
        <div class="text-center mt-16">
            <a href="/blog" class="inline-block bg-coffee-dark text-white text-[11px] font-black uppercase tracking-[0.2em] px-10 py-4 rounded-full hover:bg-accent-primary hover:shadow-lg hover:shadow-accent-primary/30 transition duration-300">
                View All Articles
            </a>
        </div>
    </div>
</section>
