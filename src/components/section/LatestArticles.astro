---
import { Image } from "astro:assets";

// Komponen ini menerima data gabungan dari index.astro sebagai props [cite: 2026-01-10]
const { posts } = Astro.props;

// DEFINISI URL RENDER AGAR GAMBAR MUNCUL DI CLOUDFLARE [cite: 2026-01-10]
const PAYLOAD_URL = 'https://zaidlycms.onrender.com';
---
<section class="pt-32 pb-20 bg-cream-latte"> 
    <div class="container mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-center text-coffee-dark mb-10">
            Latest Articles
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {posts.map((post: any) => {
                const isPayload = !!post.isPayload;
                const title = isPayload ? post.title : post.data.title;
                const slug = isPayload ? post.slug : post.slug;
                const category = isPayload ? post.category : post.data.category;
                const description = isPayload ? post.description : post.data.description;
                
                // FIXED: Ambil gambar dari properti 'image' yang sudah di-mapping di index.astro [cite: 2026-01-10]
                const imageSrc = post.image;

                // FIXED LINK: Jika slug berasal dari Payload, link langsung ke /slug [cite: 2026-01-10]
                const articleUrl = isPayload ? `/${slug}` : `/blog/${slug}`;

                return (
                    <article class="bg-coffee-light rounded-lg overflow-hidden shadow-lg hover:shadow-2xl hover:shadow-accent-primary/20 transition duration-300 flex flex-col h-full">
                        
                        <div class="w-full h-56 overflow-hidden bg-slate-100">
                            {imageSrc ? (
                                isPayload ? (
                                    /* Payload: Menggunakan URL absolut Render/R2 [cite: 2026-01-10] */
                                    <img 
                                        src={imageSrc} 
                                        alt={title} 
                                        class="w-full h-full object-cover transition-transform duration-500 hover:scale-105"
                                        loading="lazy"
                                        onerror="this.src='/placeholder-coffee.jpg'"
                                    />
                                ) : (
                                    /* Lokal */
                                    <Image 
                                        src={imageSrc} 
                                        alt={title} 
                                        width={400} 
                                        height={224} 
                                        class="w-full h-full object-cover transition-transform duration-500 hover:scale-105"
                                    />
                                )
                            ) : (
                                <div class="w-full h-full bg-coffee-brown/10 flex items-center justify-center text-coffee-brown/40">
                                    No Image
                                </div>
                            )}
                        </div>

                        <div class="p-6 flex flex-col flex-grow">
                            <span class="inline-block bg-accent-primary/10 text-[#5d4037] text-[10px] font-bold uppercase mb-3 px-2 py-1 rounded w-fit">
                                {category || 'Guide'}
                            </span>

                            <h3 class="text-xl font-semibold text-coffee-dark mb-2 line-clamp-2">
                                <a href={articleUrl} class="hover:text-[#8b5e3c] transition">
                                    {title}
                                </a>
                            </h3>
                            
                            <p class="text-sm text-coffee-brown/95 line-clamp-3 mb-4"> 
                                {description?.substring(0, 120) || 'Read the full article for detailed information and expert tips.'}
                            </p>
                            
                            <div class="mt-auto">
                                <a href={articleUrl} class="text-xs font-black uppercase tracking-widest text-accent-primary hover:underline">
                                    Read More â†’
                                </a>
                            </div>
                        </div>
                    </article>
                );
            })}
        </div>

        <div class="text-center mt-12">
            <a 
                href="/blog" 
                class="inline-block border border-coffee-dark text-coffee-dark font-semibold px-10 py-3 rounded-lg hover:bg-coffee-dark hover:text-white transition duration-300"
            >
                View All Articles
            </a>
        </div>
    </div>
</section>