---
import { Image } from "astro:assets";

// Komponen ini menerima data postingan dari index.astro sebagai props
const { posts } = Astro.props;
---
<section class="pt-32 pb-20 bg-cream-latte"> 
    <div class="container mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-center text-coffee-dark mb-10">
            Latest Articles
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {posts.map((post: any) => (
                 <article class="bg-coffee-light rounded-lg overflow-hidden shadow-lg hover:shadow-2xl hover:shadow-accent-primary/20 transition duration-300">
                    
                    {/* Menggunakan Image Component untuk optimasi otomatis */}
                    <div class="w-full h-56 overflow-hidden">
                        {post.data.image ? (
                            <Image 
                                src={post.data.image} 
                                alt={post.data.title} 
                                width={400} 
                                height={224} 
                                class="w-full h-full object-cover transition-transform duration-500 hover:scale-105"
                            />
                        ) : (
                            <div class="w-full h-full bg-coffee-brown/10 flex items-center justify-center text-coffee-brown/40">
                                No Image
                            </div>
                        )}
                    </div>

                    <div class="p-6">
                        <span class="text-xs font-semibold text-accent-primary uppercase mb-2 block">
                            {post.data.category || 'Guide'}
                        </span>
                        <h3 class="text-xl font-semibold text-coffee-dark mb-2 line-clamp-2">
                            <a href={`/${post.slug}`} class="hover:text-accent-primary transition">
                                {post.data.title}
                            </a>
                        </h3>
                        <p class="text-sm text-coffee-brown line-clamp-3"> 
                            {post.data.description?.substring(0, 120) || 'Read the full article for detailed information and expert tips.'}
                        </p>
                    </div>
                </article>
            ))}
        </div>

        <div class="text-center mt-12">
            <a 
                href="/blog" 
                class="inline-block border border-coffee-dark text-coffee-dark font-semibold px-10 py-3 rounded-lg hover:bg-coffee-dark hover:text-white transition duration-300"
            >
                View All Articles
            </a>
        </div>
    </div>
</section>