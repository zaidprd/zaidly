---
// src/components/section/CoffeeGearHub.astro
import { Image } from "astro:assets";

// Import gambar dari assets sesuai nama file di screenshot kamu
import imgEspresso from "../../assets/images/BestEspressoMachines.webp";
import imgGrinders from "../../assets/images/TopCoffeeGrinders.webp";
import imgPourOver from "../../assets/images/PourOverEssentials.webp";
import imgMaintenance from "../../assets/images/MaintenanceTool.webp"; // Sesuai screenshot

interface Post {
  slug: string;
  data: {
    title: string;
    image?: any;
  };
}

interface Props {
  posts: Post[];
}

const { posts } = Astro.props;

const gearFeaturedLinks = [
  { 
    title: "Best Espresso Machines", 
    url: "/the-ultimate-guide", 
    image: imgEspresso 
  },
  { 
    title: "Top Coffee Grinders", 
    url: "/the-ultimate-guide", 
    image: imgGrinders 
  },
  { 
    title: "Pour Over Essentials", 
    url: "/the-ultimate-guide", 
    image: imgPourOver 
  },
  { 
    title: "Maintenance Tools", 
    url: "/the-ultimate-guide", 
    image: imgMaintenance 
  },
];
---

<section class="w-full bg-coffee-light pt-16 pb-20 border-t border-coffee-brown/10">
  <div class="container mx-auto max-w-6xl px-6 md:px-12">

    <h2 class="text-4xl md:text-5xl font-black text-coffee-dark mb-6 tracking-tight italic">
      Coffee Gear Authority
    </h2>

    <p class="text-lg md:text-xl text-coffee-brown mb-10 leading-relaxed max-w-3xl">
      Investing in the right tools is the secret to cafe-quality coffee at home. We rigorously test grinders, brewers, and machines to ensure you get the best performance for your budget.
    </p>

    <div class="mb-14 bg-white p-8 rounded-2xl border border-coffee-brown/10 shadow-sm">
  <p class="font-black text-coffee-dark mb-6 text-xl uppercase tracking-tight">In our coffee gear hub, you’ll learn about:</p>
      <ul class="grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-5 text-coffee-brown text-lg">
        <li class="flex items-start gap-x-3">
          <span class="text-accent-primary mt-1">⚙️</span>
          <span><strong class="text-coffee-dark">Precision:</strong>&nbsp;Choosing grinders for consistency.</span>
        </li>
        <li class="flex items-start gap-x-3">
          <span class="text-accent-primary mt-1">⚙️</span>
          <span><strong class="text-coffee-dark">Durability:</strong>&nbsp;Equipment built to last for years.</span>
        </li>
        <li class="flex items-start gap-x-3">
          <span class="text-accent-primary mt-1">⚙️</span>
          <span><strong class="text-coffee-dark">Workflow:</strong>&nbsp;Speed and ease of use in the morning.</span>
        </li>
        <li class="flex items-start gap-x-3">
          <span class="text-accent-primary mt-1">⚙️</span>
          <span><strong class="text-coffee-dark">Maintenance:</strong>&nbsp;Keeping your gear in peak condition.</span>
        </li>
      </ul>
    </div>

    <h3 class="text-xs font-black text-coffee-brown/90 mb-8 uppercase tracking-[0.3em]">
  Expert Gear Comparisons:
</h3>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
      {gearFeaturedLinks.map((link) => (
        <a
          href={link.url}
          class="group block bg-white rounded-2xl overflow-hidden transition-all duration-500 hover:-translate-y-2 border border-coffee-brown/10 hover:shadow-2xl hover:shadow-accent-primary/10"
          aria-label={link.title}
        >
          <div class="aspect-[4/3] overflow-hidden border-b border-coffee-brown/5 bg-gray-100">
            <Image
              src={link.image}
              alt={link.title}
              width={400}
              height={300}
              loading="lazy"
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
            />
          </div>
          <div class="p-5 text-center">
            <p class="text-[11px] font-black text-coffee-dark group-hover:text-[#8b5e3c] transition-colors uppercase tracking-[0.15em] leading-tight">
    {link.title}
  </p>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>