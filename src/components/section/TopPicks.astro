---
// src/components/section/TopPicks.astro

const topProducts = [
  {
    id: "01",
    name: "Fellow Ode Brew Grinder Gen 2",
    badge: "Overall Winner",
    tag: "Best for Filter Coffee",
    description: "The gold standard for home pour-over enthusiasts. Quiet, fast, and incredible grind consistency for the perfect cup.",
    amazonUrl: "https://amzn.to/3YEvz65",
  },
  {
    id: "02",
    name: "Breville Bambino Plus",
    badge: "Runner Up",
    tag: "Best for Beginners",
    description: "Compact espresso machine that delivers cafe-quality shots without the steep learning curve of pro-sumer gear.",
    amazonUrl: "https://amzn.to/4qaaUTb", 
  },
  {
    id: "03",
    name: "AeroPress Clear",
    badge: "Best Value",
    tag: "Best for Travel",
    description: "Indestructible, versatile, and now in a beautiful transparent finish. The ultimate tool for consistent brewing anywhere.",
    amazonUrl: "https://amzn.to/3KWyx2P",
  }
];
---

<section class="py-20 bg-cream-latte"> <div class="container mx-auto max-w-6xl px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-extrabold text-coffee-dark mb-6">Ultimate Coffee Gear Picks</h2>
      <p class="text-coffee-brown text-lg max-w-2xl mx-auto font-medium leading-relaxed">
        Expertly curated selection of essential brewing equipment tested and highly recommended by Zaidly.
      </p>
      <p class="text-[10px] text-coffee-brown/60 italic mt-4">
        *As an Amazon Associate, Zaidly earns from qualifying purchases.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
      {topProducts.map((item) => (
        <div class="bg-white rounded-3xl p-10 shadow-md border border-coffee-brown/10 hover:shadow-2xl transition-all duration-500 flex flex-col relative overflow-hidden group">
          
          <div class="absolute -top-2 -right-2 text-8xl font-black text-coffee-dark/5 group-hover:text-accent-primary/10 transition-colors">
            {item.id}
          </div>

          <div class="mb-5 flex flex-wrap gap-2 relative z-10">
            <span class="bg-accent-primary text-white text-[10px] font-black uppercase tracking-widest px-3 py-1 rounded-md shadow-sm">
              {item.badge}
            </span>
            <span class="bg-coffee-brown text-white text-[10px] font-bold uppercase tracking-widest px-3 py-1 rounded-md">
              {item.tag}
            </span>
          </div>

          <h3 class="text-2xl font-bold text-coffee-dark mb-4 leading-tight relative z-10">{item.name}</h3>
          
          <p class="text-coffee-brown text-[15px] leading-relaxed mb-8 flex-grow font-normal relative z-10">
            {item.description}
          </p>
          
          <a 
            href={item.amazonUrl} 
            target="_blank" 
            rel="noopener noreferrer sponsored" 
            class="w-full py-4 px-6 bg-coffee-dark text-white text-center rounded-xl font-bold text-sm tracking-wide hover:bg-accent-primary shadow-lg transition-all duration-300 relative z-10"
          >
            Check Price on Amazon
          </a>
        </div>
      ))}
    </div>
  </div>
</section>