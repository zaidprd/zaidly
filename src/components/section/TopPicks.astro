---
// src/components/section/TopPicks.astro
import { Image } from "astro:assets";

import imgFellowOde from "../../assets/images/BrewConicalBurr.webp";
import imgBambino from "../../assets/images/BrevilleBambinoPlus.webp";
import imgAeropress from "../../assets/images/AeroPressClear.webp";

const topProducts = [
  {
    id: "01",
    name: "Fellow Ode Brew Grinder Gen 2",
    tag: "Best for Filter Coffee",
    amazonUrl: "https://amzn.to/3YEvz65",
    image: imgFellowOde
  },
  {
    id: "02",
    name: "Breville Bambino Plus",
    tag: "Best for Beginners",
    amazonUrl: "https://amzn.to/4qaaUTb", 
    image: imgBambino
  },
  {
    id: "03",
    name: "AeroPress Clear",
    tag: "Best for Travel",
    amazonUrl: "https://amzn.to/3KWyx2P",
    image: imgAeropress
  }
];
---

<section class="py-24 bg-cream-latte overflow-hidden">
  <div class="container mx-auto max-w-6xl px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-extrabold text-coffee-dark mb-6 tracking-tight">Ultimate Coffee Gear Picks</h2>
      <p class="text-coffee-brown text-lg max-w-2xl mx-auto font-medium leading-relaxed opacity-90">
        Expertly curated selection of essential brewing equipment tested and highly recommended by Zaidly Blog.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
      {topProducts.map((item) => (
        <div class="bg-white rounded-[2rem] p-8 shadow-sm border border-coffee-brown/10 hover:shadow-2xl hover:-translate-y-2 transition-all duration-500 flex flex-col relative group">
          
          {/* Nomor ID yang besar dan estetik */}
          <div class="absolute -top-4 -left-4 text-9xl font-black text-coffee-dark/[0.03] group-hover:text-accent-primary/5 transition-colors pointer-events-none">
            {item.id}
          </div>

          <div class="mb-8 aspect-square rounded-2xl bg-gray-50/50 overflow-hidden border border-coffee-brown/5 p-6 flex items-center justify-center relative z-10">
             <Image 
               src={item.image} 
               alt={`Photo of ${item.name} - ${item.tag}`} 
               width={400} 
               height={400}
               class="max-w-full h-auto object-contain transition-transform duration-700 group-hover:scale-105"
             />
          </div>

          <div class="mb-4 relative z-10">
             <span class="inline-block bg-accent-primary/20 text-[#3e2723] text-[10px] font-bold uppercase tracking-[0.2em] px-3 py-1 rounded-full border border-accent-primary/30">
    {item.tag}
  </span>
          </div>

          <h3 class="text-2xl font-bold text-coffee-dark mb-6 leading-tight relative z-10 flex-grow">
            {item.name}
          </h3>
          
          <a 
            href={item.amazonUrl} 
            target="_blank" 
            rel="noopener noreferrer sponsored" 
            aria-label={`Check price for ${item.name} on Amazon`}
            class="w-full py-4 px-6 bg-coffee-dark text-white text-center rounded-xl font-bold text-sm tracking-widest hover:bg-accent-primary shadow-lg hover:shadow-accent-primary/30 transition-all duration-300 relative z-10 uppercase"
          >
            Check Price
          </a>
        </div>
      ))}
    </div>
  </div>
</section>