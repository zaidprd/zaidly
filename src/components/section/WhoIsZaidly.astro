---
// Tentukan Props yang diterima
interface Props {
    title: string;
    subtitle: string;
    linkText: string;
    linkUrl: string;
}

// Ambil Props
const { title, subtitle, linkText, linkUrl } = Astro.props;
---

<section class="py-20 bg-gray-50">
    <div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
            
            <div>
                <h2 class="text-4xl font-extrabold text-coffee-dark mb-4">
                    {title}
                </h2>
                <p class="text-gray-700 text-lg mb-6">
                    {subtitle}
                </p>
                <a 
                    href={linkUrl} 
                    class="inline-block border border-coffee-dark text-coffee-dark font-semibold px-8 py-3 rounded-lg hover:bg-coffee-dark hover:text-white transition duration-300"
                >
                    {linkText}
                </a>
            </div>
            
            <div>
                <img 
                    src="/images/who-we-are.jpg" 
                    alt="A person preparing a coffee shot" 
                    class="rounded-lg w-full h-auto"
                />
            </div>
        </div>
    </div>
</section>