---
import { Image } from "astro:assets";

import brewingGuides from "../../assets/images/brewingGuides.webp";
import gearReviews from "../../assets/images/GearRevies.webp";
import espressoImg from "../../assets/images/espresso.webp";
import coffeeBeans from "../../assets/images/CoffeBeans.webp";
---

<section class="py-16 bg-coffee-light border-b border-coffee-brown/50">
  <div class="container mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-center text-coffee-dark mb-10">
      Explore Our Coffee Resources
    </h2>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">

      <a href="/brewing-guides" class="flex flex-col items-center justify-center p-6 rounded-lg hover:shadow-lg hover:shadow-accent-primary/20 transition-all border border-transparent hover:border-accent-primary text-center group">
        <Image src={brewingGuides} alt="Brewing Guides" width={80} height={80} class="h-20 w-20 mb-3 mix-blend-multiply group-hover:scale-110 transition-transform" />
        <p class="font-semibold text-lg text-coffee-dark group-hover:text-accent-primary">
          Brewing Guides
        </p>
      </a>

      <a href="/reviews" class="flex flex-col items-center justify-center p-6 rounded-lg hover:shadow-lg hover:shadow-accent-primary/20 transition-all border border-transparent hover:border-accent-primary text-center group">
        <Image src={gearReviews} alt="Gear Reviews" width={80} height={80} class="h-20 w-20 mb-3 mix-blend-multiply group-hover:scale-110 transition-transform" />
        <p class="font-semibold text-lg text-coffee-dark group-hover:text-accent-primary">
          Gear Reviews
        </p>
      </a>

      <a href="/espresso" class="flex flex-col items-center justify-center p-6 rounded-lg hover:shadow-lg hover:shadow-accent-primary/20 transition-all border border-transparent hover:border-accent-primary text-center group">
        <Image src={espressoImg} alt="Espresso" width={80} height={80} class="h-20 w-20 mb-3 mix-blend-multiply group-hover:scale-110 transition-transform" />
        <p class="font-semibold text-lg text-coffee-dark group-hover:text-accent-primary">
          Espresso
        </p>
      </a>

      <a href="/beans" class="flex flex-col items-center justify-center p-6 rounded-lg hover:shadow-lg hover:shadow-accent-primary/20 transition-all border border-transparent hover:border-accent-primary text-center group">
        <Image src={coffeeBeans} alt="Coffee Beans" width={80} height={80} class="h-20 w-20 mb-3 mix-blend-multiply group-hover:scale-110 transition-transform" />
        <p class="font-semibold text-lg text-coffee-dark group-hover:text-accent-primary">
          Coffee Beans
        </p>
      </a>

    </div>
  </div>
</section>