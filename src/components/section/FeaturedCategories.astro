---
import { Image } from "astro:assets";

import brewingGuides from "../../assets/images/brewingGuides.webp";
import gearReviews from "../../assets/images/GearRevies.webp";
import espressoImg from "../../assets/images/espresso.webp";
import coffeeBeans from "../../assets/images/CoffeBeans.webp";
---

<section class="py-16 bg-coffee-light border-b border-coffee-brown/50">
  <div class="container mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-center text-coffee-dark mb-10">
      Explore Our Coffee Resources
    </h2>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
      {[
        { src: brewingGuides, alt: "Brewing Guides", href: "/the-ultimate-guide" },
        { src: gearReviews, alt: "Gear Reviews", href: "/top-coffee-grinders-for-every-brew-method" },
        { src: espressoImg, alt: "Espresso", href: "/the-perfect-shot-mastering-the-science-of-home-espresso-extraction" },
        { src: coffeeBeans, alt: "Coffee Beans", href: "/beyond-the-brew-decoding-coffees-ultimate-flavor-mapsweet-bright-and-bold" }
      ].map((item) => (
        <a 
          href={item.href} 
          class="flex flex-col items-center justify-center p-6 rounded-lg hover:shadow-lg hover:shadow-accent-primary/20 transition-all border border-transparent hover:border-accent-primary text-center group"
          aria-label={`Read more about ${item.alt}`}
        >
          {/* PERBAIKAN 1: Naikkan width & height ke 120 agar gambar tajam di semua layar (Retina/DPI) */}
          <Image 
            src={item.src} 
            alt={item.alt} 
            width={120} 
            height={120} 
            class="h-20 w-20 mb-3 mix-blend-multiply group-hover:scale-110 transition-transform" 
          />
          
          {/* PERBAIKAN 2: Ubah hover color menjadi warna yang lebih gelap dari accent-primary 
              untuk rasio kontras yang lebih baik terhadap latar cream */}
          <p class="font-semibold text-lg text-coffee-dark group-hover:text-[#8b5e3c] transition-colors">
            {item.alt}
          </p>
        </a>
      ))}
    </div>
  </div>
</section>