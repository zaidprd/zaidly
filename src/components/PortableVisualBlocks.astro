---
import PortableVisualBlocks from './PortableVisualBlocks'; // Memanggil file .tsx
const { value } = Astro.props;
---

<div class="zaidly-render">
  <PortableVisualBlocks value={value} />
</div>

<style is:global>
  /* BASE RENDER */
  .zaidly-render { color: #000; }

  /* PARAGRAF & TEXT (Targeting hasil marked dari .tsx) */
  .zaidly-p-container p {
    font-size: 1.125rem;
    line-height: 1.8;
    margin-bottom: 1.5rem;
    font-weight: 500;
  }

  /* JUDUL (H2 & H3) */
  .zaidly-h2 { 
    font-size: 2rem; 
    font-weight: 900; 
    color: #4a3728; 
    margin: 2.5rem 0 1rem; 
    text-transform: uppercase;
    scroll-margin-top: 120px; /* ðŸ‘ˆ TAMBAHAN BARU */
  }
  .zaidly-h3 { 
    font-size: 1.5rem; 
    font-weight: 800; 
    margin-top: 2rem;
    scroll-margin-top: 120px; /* ðŸ‘ˆ TAMBAHAN BARU */
  }
  
  /* TABLE STYLE */
  .zaidly-table-wrapper { overflow-x: auto; margin: 2rem 0; border: 1px solid #eee; }
  .zaidly-table-content table { width: 100%; border-collapse: collapse; }
  .zaidly-table-content th { background: #4a3728; color: #fff; padding: 15px; text-align: left; }
  .zaidly-table-content td { padding: 12px 15px; border-bottom: 1px solid #eee; font-weight: 600; }

  /* BUTTONS (KOTAK TAJAM) */
  .zaidly-btn-group { display: flex; gap: 12px; margin: 2.5rem 0; flex-wrap: wrap; }
  .btn-amazon, .btn-ali { padding: 14px 24px; font-weight: 900; text-decoration: none; border-radius: 0 !important; font-size: 12px; display: inline-flex; align-items: center; gap: 8px; }
  .btn-amazon { background: linear-gradient(180deg, #FFB338 0%, #FF9900 100%); color: #000; }
  .btn-ali { background: linear-gradient(180deg, #FF5C38 0%, #E62E04 100%); color: #fff; }

  /* BODY IMAGE (KOTAK TAJAM) */
  .zaidly-body-img { margin: 2.5rem 0; }
  .zaidly-body-img img { width: 100%; height: auto; border-radius: 0 !important; display: block; border-bottom: 4px solid #4a3728; }
  
  /* QUOTE */
  blockquote {
    margin: 2rem 0;
    padding: 1.5rem;
    background: #fdfaf7;
    border-left: 8px solid #4a3728;
    font-style: italic;
  }
</style>