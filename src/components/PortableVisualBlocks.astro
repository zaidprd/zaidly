---
// src/components/PortableVisualBlocks.astro
import PortableVisualBlocksReact from './PortableVisualBlocks.tsx'; 
const { value } = Astro.props;
---

<div class="zaidly-render">
  <PortableVisualBlocksReact value={value} client:load />
</div>

<style is:global>
  .zaidly-render { color: #000; }
  .zaidly-h2 { font-size: 2rem; font-weight: 900; color: #4a3728; margin: 2.5rem 0 1rem; text-transform: uppercase; scroll-margin-top: 120px; font-family: ui-serif, Georgia, serif; font-style: italic; }
  .zaidly-h3 { font-size: 1.5rem; font-weight: 800; margin-top: 2rem; scroll-margin-top: 120px; font-family: ui-serif, Georgia, serif; font-style: italic; }
</style>