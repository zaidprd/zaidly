---
// src/components/beans/BeanHub.astro
import ContentSection from '../ContentSection.astro';

// 1. Ambil semua gambar dari assets secara otomatis
const beanImages = import.meta.glob<{ default: ImageMetadata }>('../../assets/images/{beans,brewing,gear}/*.{jpeg,jpg,png,webp}');

// 2. Data Lengkap (SEO Optimized)
const ALL_CONTENT_BLOCKS = [
    {
        sectionId: "coffee-beans-mastery",
        sectionTitle: "1. The Science of Coffee Beans",
        sectionSubtitle: "Understanding the journey from seed to cup. Explore species, processing methods, and how origins define your coffee's unique flavor profile.",
        bodyContent: [
            {
                type: 'list',
                title: 'What defines your coffee flavor:',
                listItems: [
                    "<strong>Arabica vs Robusta:</strong> Understanding the fundamental differences in species.",
                    "<strong>Post-Harvest Processing:</strong> How <em>Washed</em>, <em>Natural</em>, and <em>Honey</em> processes impact taste.",
                    "<strong>Roast Profiles:</strong> The impact of Light, Medium, and Dark roasts on acidity and body.",
                    "<strong>Terroir & Origin:</strong> Exploring the unique notes of Ethiopia, Colombia, and Indonesia.",
                ]
            },
            {
                type: 'grid',
                title: 'Essential Bean Guides:',
                guides: [
                    { title: "Arabica vs Robusta Guide", url: "/beans/arabica-vs-robusta", imgKey: "../../assets/images/beans/arabica-featured.jpg" },
                    { title: "Processing Methods", url: "/beans/coffee-processing", imgKey: "../../assets/images/beans/process-featured.jpg" },
                    { title: "Roast Level Impact", url: "/beans/roast-levels", imgKey: "../../assets/images/beans/roast-featured.jpg" },
                    { title: "Global Origin Guide", url: "/beans/coffee-origins", imgKey: "../../assets/images/beans/origin-featured.jpg" },
                ]
            }
        ],
    },
    {
        sectionId: "manual-brewing-fundamentals",
        sectionTitle: "2. Manual Coffee Brewing Mastery",
        sectionSubtitle: "Taking full control of your coffee ritual. Master the variables of temperature, grind size, and pour technique to unlock hidden flavors.",
        bodyContent: [
            {
                type: 'paragraph',
                text: "Manual brewing is where art meets precision. By controlling the flow rate and immersion time, you can tailor every cup to your exact preference. Whether you prefer the clarity of a pour-over or the body of a French Press, we have the techniques for you."
            },
            {
                type: 'grid',
                title: 'Master These Methods:',
                guides: [
                    { title: "Hario V60 Masterclass", url: "/guides/v60-pour-over", imgKey: "../../assets/images/brewing/v60-recipe.jpg" },
                    { title: "Chemex Perfect Brew", url: "/guides/chemex-guide", imgKey: "../../assets/images/brewing/chemex-masterclass.jpg" },
                    { title: "Aeropress Techniques", url: "/guides/aeropress-guide", imgKey: "../../assets/images/brewing/kalita-wave.jpg" },
                    { title: "French Press Perfection", url: "/guides/french-press-basics", imgKey: "../../assets/images/brewing/gino-basics.jpg" },
                ]
            }
        ],
    },
    {
        sectionId: "advanced-brewing-guides",
        sectionTitle: "3. Advanced Techniques & Cold Brew",
        sectionSubtitle: "Pushing the boundaries of home brewing. From high-concentration immersion to the patience of slow-drip cold brew.",
        bodyContent: [
            {
                type: 'list',
                title: 'Specialty Brewing Topics:',
                listItems: [
                    "<strong>Cold Brew:</strong> The art of low-acidity, high-caffeine extraction.",
                    "<strong>Water Chemistry:</strong> Why filtered water is crucial for specialty coffee.",
                    "<strong>Extraction Theory:</strong> Balancing sweetness, acidity, and bitterness.",
                ]
            },
            {
                type: 'grid',
                title: 'Advanced Guides:',
                guides: [
                    { title: "Ultimate Cold Brew Guide", url: "/guides/best-cold-brew", imgKey: "../../assets/images/gear/storage-featured.jpg" }, 
                    { title: "Water Quality Tips", url: "/guides/coffee-water-science", imgKey: "../../assets/images/gear/filter-featured.jpg" },
                    { title: "Dialing In Your Brew", url: "/guides/extraction-guide", imgKey: "../../assets/images/gear/scale-featured.jpg" },
                    { title: "Iced Coffee Methods", url: "/guides/iced-coffee-techniques", imgKey: "../../assets/images/gear/kettle-featured.jpg" },
                ]
            }
        ],
    },
];
---

{/* Render semua blok konten ke dalam template ContentSection yang konsisten */}
<div class="bg-cream-latte pb-24">
    {ALL_CONTENT_BLOCKS.map((data, index) => (
        <ContentSection 
            data={data} 
            isFirst={index === 0} 
            images={beanImages}
        />
    ))}
</div>