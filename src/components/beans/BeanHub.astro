---
// src/components/beans/BeanHub.astro (PREMIUM & OPTIMIZED FOR BEANS/BREWING)
import ContentSection from '../ContentSection.astro';

interface GuideLink {
    title: string;
    url: string;
    image: string;
}

interface BodyElement {
    type: 'paragraph' | 'list' | 'grid';
    title?: string;
    text?: string;
    listItems?: string[];
    guides?: GuideLink[];
}

interface ContentBlockData {
    sectionId: string;
    sectionTitle: string;
    sectionSubtitle: string;
    bodyContent: BodyElement[];
}

const ALL_CONTENT_BLOCKS: ContentBlockData[] = [
    // BLOK 1: COFFEE BEANS MASTERY
    {
        sectionId: "coffee-beans-mastery",
        sectionTitle: "1. The Science of Coffee Beans",
        sectionSubtitle: "Understanding the journey from seed to cup. Explore species, processing methods, and how origins define your coffee's unique flavor profile.",
        bodyContent: [
            {
                type: 'list',
                title: 'What defines your coffee flavor:',
                listItems: [
                    "<strong>Arabica vs Robusta:</strong> Understanding the fundamental differences in species.",
                    "<strong>Post-Harvest Processing:</strong> How <em>Washed</em>, <em>Natural</em>, and <em>Honey</em> processes impact taste.",
                    "<strong>Roast Profiles:</strong> The impact of Light, Medium, and Dark roasts on acidity and body.",
                    "<strong>Terroir & Origin:</strong> Exploring the unique notes of Ethiopia, Colombia, and Indonesia.",
                ]
            },
            {
                type: 'grid',
                title: 'Essential Bean Guides:',
                guides: [
                    { title: "Arabica vs Robusta Guide", url: "/beans/arabica-vs-robusta", image: "/images/beans/arabica-featured.jpg" },
                    { title: "Processing Methods", url: "/beans/coffee-processing", image: "/images/beans/process-featured.jpg" },
                    { title: "Roast Level Impact", url: "/beans/roast-levels", image: "/images/beans/roast-featured.jpg" },
                    { title: "Global Origin Guide", url: "/beans/coffee-origins", image: "/images/beans/origin-featured.jpg" },
                ]
            }
        ],
    },

    // BLOK 2: MANUAL BREWING FUNDAMENTALS
    {
        sectionId: "manual-brewing-fundamentals",
        sectionTitle: "2. Manual Coffee Brewing Mastery",
        sectionSubtitle: "Taking full control of your coffee ritual. Master the variables of temperature, grind size, and pour technique to unlock hidden flavors.",
        bodyContent: [
            {
                type: 'paragraph',
                text: "Manual brewing is where art meets precision. By controlling the flow rate and immersion time, you can tailor every cup to your exact preference. Whether you prefer the clarity of a pour-over or the body of a French Press, we have the techniques for you."
            },
            {
                type: 'grid',
                title: 'Master These Methods:',
                guides: [
                    { title: "Hario V60 Masterclass", url: "/guides/v60-pour-over", image: "/images/brewing/v60-recipe.jpg" },
                    { title: "Chemex Perfect Brew", url: "/guides/chemex-guide", image: "/images/brewing/chemex-masterclass.jpg" },
                    { title: "Aeropress Techniques", url: "/guides/aeropress-guide", image: "/images/brewing/kalita-wave.jpg" },
                    { title: "French Press Perfection", url: "/guides/french-press-basics", image: "/images/brewing/gino-basics.jpg" },
                ]
            }
        ],
    },

    // BLOK 3: ADVANCED BREWING & COLD BREW
    {
        sectionId: "advanced-brewing-guides",
        sectionTitle: "3. Advanced Techniques & Cold Brew",
        sectionSubtitle: "Pushing the boundaries of home brewing. From high-concentration immersion to the patience of slow-drip cold brew.",
        bodyContent: [
            {
                type: 'list',
                title: 'Specialty Brewing Topics:',
                listItems: [
                    "<strong>Cold Brew:</strong> The art of low-acidity, high-caffeine extraction.",
                    "<strong>Water Chemistry:</strong> Why filtered water is crucial for specialty coffee.",
                    "<strong>Extraction Theory:</strong> Balancing sweetness, acidity, and bitterness.",
                ]
            },
            {
                type: 'grid',
                title: 'Advanced Guides:',
                guides: [
                    { title: "Ultimate Cold Brew Guide", url: "/guides/best-cold-brew", image: "/images/gear/storage-featured.jpg" }, // Reuse relevant image
                    { title: "Water Quality Tips", url: "/guides/coffee-water-science", image: "/images/gear/filter-featured.jpg" },
                    { title: "Dialing In Your Brew", url: "/guides/extraction-guide", image: "/images/gear/scale-featured.jpg" },
                    { title: "Iced Coffee Methods", url: "/guides/iced-coffee-techniques", image: "/images/gear/kettle-featured.jpg" },
                ]
            }
        ],
    },
];
---

{/* Map data ke ContentSection dengan prop isFirst untuk mengatur padding top otomatis */}
{ALL_CONTENT_BLOCKS.map((data, index) => (
    <ContentSection 
        data={data} 
        isFirst={index === 0} 
    />
))}