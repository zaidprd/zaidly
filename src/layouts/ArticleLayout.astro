---
// src/layouts/ArticleLayout.astro
import BaseLayout from './BaseLayout.astro';
import TableOfContents from '../components/TableOfContents.astro';
import { Image } from 'astro:assets';

// Iklan tetap pakai import static (Ini Aman karena file lokal)
import adGrinderImg from '../assets/images/BrewConicalBurr.webp';

const { frontmatter, headings } = Astro.props; 

// Sidebar hanya muncul jika ada heading h2 atau h3
const showSidebar = headings && headings.filter((h: any) => h.depth > 1 && h.depth < 4).length > 0;

const formattedDate = frontmatter.pubDate 
    ? new Date(frontmatter.pubDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) 
    : 'Date not available';

const ads = {
    topPick: {
        title: "Brew Conical Burr Coffee Grinder",
        img: adGrinderImg, 
        link: "https://amzn.to/3YEvz65" 
    }
};

const isExternal = !!frontmatter.isExternal;
---

<BaseLayout title={frontmatter.title}>
    <main class="bg-cream-latte min-h-screen text-coffee-dark relative">
        <header class="pt-28 md:pt-36 pb-12 border-b border-coffee-brown/10 text-center md:text-left">
            <div class="container mx-auto max-w-6xl px-4">
                <div class="max-w-4xl">
                    <div class="flex items-center justify-center md:justify-start space-x-3 mb-8">
                        <span class="bg-accent-primary text-white text-[10px] font-black px-3 py-1 tracking-[0.2em] uppercase">Expert Guide</span>
                        <time class="text-[10px] font-bold text-coffee-brown/60 uppercase tracking-widest">{formattedDate}</time>
                    </div>
                    <h1 class="text-4xl md:text-7xl font-black leading-[1.05] text-coffee-dark uppercase tracking-tighter mb-8 italic">
                        {frontmatter.title}
                    </h1>
                    <p class="text-coffee-brown font-bold text-xs uppercase tracking-[0.2em]">
                        Written by <span class="text-accent-primary border-b-2 border-accent-primary/20">{frontmatter.author}</span>
                    </p>
                </div>
            </div>
        </header>

        <div class="container mx-auto max-w-6xl px-4 py-12">
            <div class="flex flex-col lg:flex-row gap-16">
                <article class={showSidebar ? 'lg:w-3/4 w-full' : 'w-full'}>
                    
                    {frontmatter.image && (
                        <div class="mb-12 border border-coffee-brown/15 bg-white p-2 shadow-sm">
                            {isExternal ? (
                                /* DATA TURSO/R2: Wajib pakai tag img biasa karena Astro Config abang 'noop' */
                                <img 
                                    src={frontmatter.image} 
                                    alt={frontmatter.title} 
                                    class="w-full aspect-video object-cover" 
                                    loading="eager"
                                />
                            ) : (
                                /* DATA LOKAL: Boleh pakai Image Astro */
                                <Image 
                                    src={frontmatter.image} 
                                    alt={frontmatter.title} 
                                    class="w-full aspect-video object-cover" 
                                    loading="eager"
                                />
                            )}
                        </div>
                    )}

                    <slot />
                </article>

                {showSidebar && (
                    <aside class="hidden lg:block lg:w-1/4 sticky top-28 self-start h-fit">
                        <div class="space-y-12">
                            <details open class="group bg-white border-l-4 border-accent-primary shadow-sm">
                                <summary class="p-6 cursor-pointer list-none font-black text-[10px] uppercase tracking-[0.3em]">Navigation â†“</summary>
                                <div class="px-6 pb-2 border-t border-coffee-brown/5">
                                    <TableOfContents headings={headings} />
                                </div>
                            </details>
                            
                            <div class="bg-white border border-coffee-brown/15 p-6 text-center">
                                <h3 class="font-black text-[9px] text-accent-primary mb-6 uppercase tracking-[0.3em]">Top Choice</h3>
                                <a href={ads.topPick.link} target="_blank" class="group block">
                                    <div class="aspect-square bg-[#F9F9F7] overflow-hidden mb-6 p-4">
                                        <Image src={ads.topPick.img} alt={ads.topPick.title} width={300} height={300} class="w-full h-full object-contain group-hover:scale-110 transition-transform" />
                                    </div>
                                    <h4 class="text-sm font-black uppercase leading-snug">{ads.topPick.title}</h4>
                                </a>
                            </div>
                        </div>
                    </aside>
                )}
            </div>
        </div>
    </main>
</BaseLayout>