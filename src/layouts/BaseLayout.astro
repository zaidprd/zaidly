---
import '../styles/global.css';
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonical?: string;
}

const siteOrigin = "https://zaidly.com"; 
const currentPath = Astro.url.pathname;
const absoluteURL = new URL(currentPath, siteOrigin).href;

const {
  title = "Zaidly - Your Trusted Resource For All Things Coffee",
  description = "Zaidly is your leading coffee website online.",
  image = "/images/zaidly-logo-social.png",
  canonical = absoluteURL 
} = Astro.props;

const siteName = "Zaidly";
---

<!DOCTYPE html>
<html lang="en-US" class="min-h-screen">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  
  {/* PERBAIKAN PERFORMA 1: Tambahkan Preconnect untuk RemixIcon agar loading lebih cepat 
      Ini mengatasi masalah 'Network dependency tree' di audit Anda */}
  <link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin />
  <link rel="dns-prefetch" href="https://cdn.jsdelivr.net" />
  
  {/* PERBAIKAN PERFORMA 2: Gunakan 'display=swap' atau muat CSS secara efisien untuk menghindari render-blocking */}
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" media="print" onload="this.media='all'" />
  
  <ViewTransitions />
  <meta name="google-site-verification" content="-_5rR5OonSa46ubUy5I2sHzN1esjGpcnd1em8We3a7c" />
  
  <title>{title}</title>
  <meta name="description" content={description} />
  
  <link rel="canonical" href={canonical} />

  {/* Meta tags tetap sama */}
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonical} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={new URL(image, siteOrigin).href} />
  <meta property="og:site_name" content={siteName} />

  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={new URL(image, siteOrigin).href} />

  <link rel="icon" href="/images/zaidly-favicon.png" />
</head>

<body class="flex flex-col min-h-screen antialiased bg-cream-latte">
  <Header />
  <main class="flex-grow pt-16">
    <slot />
  </main>
  <Footer />
</body>
</html>