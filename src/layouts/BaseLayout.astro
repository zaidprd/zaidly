---
import '../styles/global.css';
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  canonical?: string;
}

// FIX: Pastikan URL Absolut benar
const siteOrigin = "https://zaidly.com"; 
const currentPath = Astro.url.pathname;
const absoluteURL = new URL(currentPath, siteOrigin).href;

const {
  title = "Zaidly - Your Trusted Resource For All Things Coffee",
  description = "Zaidly is your leading coffee website online.",
  image = "/images/zaidly-logo-social.png",
  // Gunakan absoluteURL agar skor SEO 100
  canonical = absoluteURL 
} = Astro.props;

const siteName = "Zaidly";
---

<!DOCTYPE html>
<html lang="en-US" class="min-h-screen">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
  <ViewTransitions />

  <title>{title}</title>
  <meta name="description" content={description} />
  
  {/* Link Canonical Absolut */}
  <link rel="canonical" href={canonical} />

  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonical} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={image} />
  <meta property="og:site_name" content={siteName} />

  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={image} />

  <link rel="icon" href="/images/zaidly-favicon.png" />
</head>

<body class="flex flex-col min-h-screen antialiased bg-cream-latte">
  <Header />

  <main class="flex-grow pt-16">
    <slot /> </main>

  <Footer />
</body>
</html>