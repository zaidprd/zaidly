---
import '../styles/global.css';
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonical?: string;
}

const siteOrigin = "https://zaidly.com"; 
const currentPath = Astro.url.pathname;
const absoluteURL = new URL(currentPath, siteOrigin).href;

const {
  title = "Zaidly - Professional Coffee Brewing Guides",
  description = "Expertly curated coffee resources and brewing techniques.",
  image = "/images/zaidly-logo-social.png",
  canonical = absoluteURL 
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en-US">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  
  <ViewTransitions />
  <meta name="google-site-verification" content="-_5rR5OonSa46ubUy5I2sHzN1esjGpcnd1em8We3a7c" />
  <meta name='impact-site-verification' value='279d676a-02ec-4497-b9cf-a692685ba7db'>
  <title>{title}</title>
  <meta name="description" content={description} />
  <link rel="canonical" href={canonical} />

  <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Fraunces:ital,opsz,wght@0,9..144,400..900;1,9..144,400..900&family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">

<style is:global>
  :root {
    /* Jiwa Kopi (Heading) */
    --font-coffee: 'Fraunces', serif;
    /* Bersih ala Amazon (Body) */
    --font-clean: 'Plus Jakarta Sans', sans-serif;
  }

  body {
    font-family: var(--font-clean);
    background-color: #FDFCF0; /* Cream Latte */
    color: #2D2424; /* Dark Coffee Bean */
    -webkit-font-smoothing: antialiased;
  }

  /* Judul ala Amazon tapi berjiwa Kopi */
  h1 {
    font-family: var(--font-coffee);
    /* Ukuran mengikuti standar kenyamanan US & Amazon */
    font-size: clamp(2.25rem, 6vw, 3.5rem); 
    font-weight: 800; /* Tebal & Berwibawa */
    line-height: 1.1;
    letter-spacing: -0.02em;
    font-style: normal; /* Tegak agar terlihat expert, bukan sekadar gaya-gayaan */
    color: #3C2F2F;
  }

  /* Subheadings H2 & H3 */
  h2, h3 {
    font-family: var(--font-coffee);
    font-weight: 700;
    color: #3C2F2F;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  /* Teks Artikel (Prose) - Ukuran 18px standar Amerika */
  .prose {
    font-family: var(--font-clean);
    font-size: 1.125rem; /* 18px */
    line-height: 1.75;
    color: #3C2F2F;
  }

  .prose p {
    margin-bottom: 1.5rem;
  }
</style>
</head>
<body class="flex flex-col min-h-screen">
  <Header />
  <main class="flex-grow pt-16">
    <slot />
  </main>
  <Footer />
</body>
</html>
